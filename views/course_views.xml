<odoo>

    <!-- Action -->
    <record id="academy_course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- List View -->
    <record id="academy_course_list_view" model="ir.ui.view">
        <field name="name">academy.course.list</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list decoration-danger="is_full"
                  decoration-success="state == 'published'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="enrolled_count"/>
                <field name="available_seats"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="academy_course_form_view" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <button name="action_publish"
                            type="object"
                            string="Publish"
                            visibility="state == 'draft'"/>

                    <button name="action_start"
                            type="object"
                            string="Start"
                            visibility="state == 'published'"/>

                    <button name="action_complete"
                            type="object"
                            string="Complete"
                            visibility="state == 'in_progress'"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            visibility="state in ('draft','published','in_progress')"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,published,in_progress,done,cancelled"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action"
                                name="%(academy_enrollment_action)d"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="enrolled_count"
                                   widget="statinfo"
                                   string="Enrollments"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_hours"/>
                            <field name="max_students"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Enrollments">
                            <field name="enrollment_ids"/>
                        </page>
                    </notebook>

                    <chatter/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
