<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- كل الـ record هنا -->
        <record id="academy_course_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">list,kanban,form</field>
        </record>

        <record id="academy_course_list_view" model="ir.ui.view">
            <field name="name">academy.course.list</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <list decoration-danger="is_full"
                      decoration-success="state == 'published'"
                      decoration-muted="state == 'cancelled'">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_id"/>
                    <field name="instructor_id"/>
                    <field name="enrolled_count"/>
                    <field name="available_seats"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="academy_course_form_view" model="ir.ui.view">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form>
                    <header>

    <!-- Publish -->
    <button name="action_publish"
            type="object"
            string="Publish"
            class="btn-primary"
            invisible="state != 'draft'"/>

    <!-- Start -->
     <button name="action_start"
            type="object"
            string="Start"
            class="btn-secondary"
            invisible="state != 'published'"/>

    <!-- Complete -->
    <button name="action_complete"
            type="object"
            string="Complete"
            class="btn-success"
            invisible="state != 'in_progress'"/>

    <!-- Cancel (only in draft) -->
    <button name="action_cancel"
            type="object"
            string="Cancel"
            class="btn-danger"
            invisible="state != 'draft'"/>

    <!-- Generate Product -->
    <button name="action_open_product_wizard"
            type="object"
            string="Generate Product"
            class="btn-info"
            invisible="state not in ('published','in_progress')"/>
    
    <!-- Statusbar -->
    <field name="state"
           widget="statusbar"
           statusbar_visible="draft,published,in_progress,done,cancelled"/>

        </header>


                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="action" name="%(academy_enrollment_action)d"
                                    class="oe_stat_button"
                                     icon="fa-users">
                                <field name="enrolled_count" widget="statinfo" string="Enrollments"/>
                            </button>
                        </div>

                        <div class="oe_button_box" name="button_box">
                          <button type="object"
                                name="action_view_sales"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                invisible="not product_id">
                                 <field name="sale_order_count"  
                                      widget="statinfo" 
                                     string="Sales"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="category_id"/>
                                <field name="instructor_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_hours"/>
                                <field name="max_students"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Enrollments">
                                <field name="enrollment_ids"/>
                            </page>
                        </notebook>

                        <chatter/>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
