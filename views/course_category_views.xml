<odoo>

    <record id="academy_course_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">academy.course.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="academy_course_category_list_view" model="ir.ui.view">
        <field name="name">academy.course.category.list</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_count"/>
            </list>
        </field>
    </record>

    <record id="academy_course_category_form_view" model="ir.ui.view">
        <field name="name">academy.course.category.form</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

</odoo>
