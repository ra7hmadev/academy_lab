<odoo>

    <!-- All Enrollments -->
    <record id="academy_enrollment_action" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- My Enrollments -->
    <record id="academy_my_enrollment_action" model="ir.actions.act_window">
        <field name="name">My Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="domain">[('student_id','=',uid)]</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="academy_enrollment_list_view" model="ir.ui.view">
        <field name="name">academy.enrollment.list</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="state"/>
                <field name="passed"/>
            </list>
        </field>
    </record>

    <record id="academy_enrollment_form_view" model="ir.ui.view">
    <field name="name">academy.enrollment.form</field>
    <field name="model">academy.enrollment</field>
    <field name="arch" type="xml">
        <form>
            <header>

                <button name="action_confirm"
                        type="object"
                        string="Confirm"
                        visibility="state == 'draft'"/>

                <button name="action_complete"
                        type="object"
                        string="Complete"
                        visibility="state == 'confirmed'"/>

                <button name="action_cancel"
                        type="object"
                        string="Cancel"
                        visibility="state in ('draft','confirmed')"/>

                <field name="state"
                       widget="statusbar"
                       statusbar_visible="draft,confirmed,completed,cancelled"/>
            </header>

            <sheet>
                <group>
                    <field name="student_id"/>
                    <field name="course_id"/>
                    <field name="grade"/>
                    <field name="attendance_percentage"/>
                    <field name="notes"/>
                </group>
            </sheet>

            <chatter/>
        </form>
    </field>
</record>


</odoo>
